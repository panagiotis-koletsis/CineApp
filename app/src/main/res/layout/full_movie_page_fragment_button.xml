<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select tickets for"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/buttonInc"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="40dp"
        android:text="+"
        app:layout_constraintRight_toLeftOf="@+id/textViewNumber"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/buttonDecr"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintLeft_toRightOf="@+id/textViewNumber"
        />
    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total : 10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumber"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/buttonTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select tickets"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>